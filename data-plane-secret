[root@bastion rhoso]# ssh-keygen -f osp -N "" -t rsa -b 4096


[root@bastion rhoso]# ssh-keygen -f ./nova-migration-ssh-key -t ecdsa-sha2-nistp521 -N ''

[root@bastion rhoso]# oc create secret generic dataplane-ansible-ssh-private-key-secret \
--save-config \
--dry-run=client \
--from-file=ssh-privatekey=osp \
--from-file=ssh-publickey=osp.pub \
--from-file=authorized_keys=osp.pub -n openstack \
-o yaml | oc apply -f -


[root@bastion rhoso]# oc create secret generic nova-migration-ssh-key \
--save-config \
--from-file=ssh-privatekey=nova-migration-ssh-key \
--from-file=ssh-publickey=nova-migration-ssh-key.pub \
-n openstack \
-o yaml | oc apply -f -

[root@bastion rhoso]# oc create secret generic subscription-manager --from-literal rhc_auth='{"login": {"username": "******", "password": "*****"}}'


[root@bastion rhoso]# oc create secret generic redhat-registry --from-literal edpm_container_registry_logins='{"registry.redhat.io": {"****": "**********"}}'

