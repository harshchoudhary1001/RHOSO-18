[root@bastion rhoso]# oc create secret generic dataplane-ansible-ssh-private-key-secret \
--save-config \
--dry-run=client \
--from-file=ssh-privatekey=osp \
--from-file=ssh-publickey=osp.pub \
--from-file=authorized_keys=osp.pub -n openstack \
-o yaml | oc apply -f -
secret/dataplane-ansible-ssh-private-key-secret created
[root@bastion rhoso]# oc create secret generic nova-migration-ssh-key \
--save-config \
--from-file=ssh-privatekey=nova-migration-ssh-key \
--from-file=ssh-publickey=nova-migration-ssh-key.pub \
-n openstack \
-o yaml | oc apply -f -
secret/nova-migration-ssh-key configured
